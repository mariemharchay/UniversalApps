<Page x:Class="WpfMaPremiereApplication.Exercice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMaPremiereApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Exercice">
    <DockPanel Background="White">
        <TextBox DockPanel.Dock="Top" Height="350" Margin="10">This is my text</TextBox>
        
        <StackPanel Margin="10" DockPanel.Dock="Right" Orientation="Horizontal" Height="40" VerticalAlignment="Top">
            <Button Margin="0 0 10 0">OK</Button>
            <Button>Cancel</Button>
        </StackPanel>
        <TextBlock></TextBlock>
    </DockPanel>

   




</Page>
